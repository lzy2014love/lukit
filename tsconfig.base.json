{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": false,
    "target": "es2020",
    "useDefineForClassFields": false,
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "types": ["node", "vitest/globals"],
    "declaration": true
  },
  "exclude": ["node_modules", "dist"]
}
